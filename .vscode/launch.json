  "version": "0.2.0",
  "configurations": [
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "sendingEmails:HelloWorldFunction (nodejs12.x)",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/lambdas/sendingEmails/template.yaml",
        "logicalId": "HelloWorldFunction"
      },
      "lambda": {
        "payload": {},
        "environmentVariables": {},
        "runtime": "nodejs12.x"
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "API sendingEmails:HelloWorldFunction (nodejs12.x)",
      "invokeTarget": {
        "target": "api",
        "templatePath": "${workspaceFolder}/lambdas/sendingEmails/template.yaml",
        "logicalId": "HelloWorldFunction"
      },
      "api": {
        "path": "/hello",
        "httpMethod": "get",
        "payload": {
          "json": {}
        }
      },
      "lambda": {
        "runtime": "nodejs12.x"
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "lambda-nodejs12.x:HelloWorldFunction (nodejs12.x)",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/lambdas/sendingEmails/lambda-nodejs12.x/template.yaml",
        "logicalId": "HelloWorldFunction"
      },
      "lambda": {
        "payload": {},
        "environmentVariables": {},
        "runtime": "nodejs12.x"
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "API lambda-nodejs12.x:HelloWorldFunction (nodejs12.x)",
      "invokeTarget": {
        "target": "api",
        "templatePath": "${workspaceFolder}/lambdas/sendingEmails/lambda-nodejs12.x/template.yaml",
        "logicalId": "HelloWorldFunction"
      },
      "api": {
        "path": "/hello",
        "httpMethod": "get",
        "payload": {
          "json": {}
        }
      },
      "lambda": {
        "runtime": "nodejs12.x"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "localhost",
      "port": 3000
    },
    {
      "type": "node",
      "request": "attach",
      "name": "localhost debug",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via npm version 10.15",
      "program": "${workspaceFolder}/server.js",
      "env": {
        "DB_HOST": "TBC",
        "DB_USER": "TBC",
        "DB_PASS": "TBC"
      },
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.15.3/bin/node"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
