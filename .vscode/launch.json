{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:8080"
    },

    // configuration for backend debugging
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Node",
      "processId": "${command:PickProcess}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server.js",
      "skipFiles": ["node_modules/**/*.js"],
      "stopOnEntry": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via npm version 10.15",
      "program": "${workspaceFolder}/server.js",
      "env": {
        "DB_HOST": "TBC",
        "DB_USER": "TBC",
        "DB_PASS": "TBC"
      },
      "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v10.15.3/bin/node"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
     // configuration for front-end testing
    {
      "type": "pwa-chrome",
      "request": "attach",
      "name": "Attach to Karma",
      "address": "localhost",
      "restart": true,
      "port": 9222,
      "timeout": 600000,
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/_karma_webpack_": "${workspaceFolder}"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Karma test file",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/node_modules/.bin/ng",
      "args": ["test", "--include", "${relativeFile}"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["--fullTrace true --timeout", "999999", "--colors", "${workspaceFolder}/server/test/**/*.spec.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["--fullTrace true --timeout", "999999", "--colors", "${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
